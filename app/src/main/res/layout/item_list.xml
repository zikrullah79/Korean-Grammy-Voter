<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">
<!--    android:foreground="#5D000000"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5D000000"/>
    <TextView
        android:id="@+id/tv_nominators"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:inputType="textMultiLine"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_vote"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/dummy"/>
    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_vote"
        android:text="@string/_100"/>
    <Button
        android:id="@+id/bt_vote"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="@string/vote"
        android:background="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_percentage"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>